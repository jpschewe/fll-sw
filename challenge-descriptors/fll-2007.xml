         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="350" />
        </right>
       </condition>
       <result>
        <constant value="389" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="355" />
        </right>
       </condition>
       <result>
        <constant value="390" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="360" />
        </right>
       </condition>
       <result>
        <constant value="391" />
        <variableRef coefficient="-1" variable="subtotal" />
