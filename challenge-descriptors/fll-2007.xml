         <constant value="375" />
        </right>
       </condition>
       <result>
        <constant value="394" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="380" />
        </right>
       </condition>
       <result>
        <constant value="395" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="385" />
        </right>
       </condition>
       <result>
        <constant value="396" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="390" />
        </right>
       </condition>
       <result>
        <constant value="397" />
        <variableRef coefficient="-1" variable="subtotal" />
