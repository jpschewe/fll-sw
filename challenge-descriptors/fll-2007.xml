<?xml version="1.0" encoding="UTF-8"?>
<fll title="FLL 2007 Challenge: Power Puzzle"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:noNamespaceSchemaLocation="fll.xsd">

 <!-- $Rev: 351 $ -->

 <Performance minimumScore="0" weight="1.0">

  <goal name="roof_solar_panel" title="Solar Panel ON Roof"
   multiplier="15" />
    
  <goal name="personal_vehicle_choice"
   title="Car TO House &amp; Truck TO Farm or Parking Lot" multiplier="25" />

  <goal name="hydro_dam" title="Hydro-Dam TOUCHING banks" multiplier="25" />

  <goal name="flood_house" title="Houses TOUCHED by Dam or Flood" multiplier="-10" />

  <goal name="wind_turbines" title="Wind Turbines TOUCHING Communities" multiplier="15"
   max="2" />

  <goal name="grid_connection" title="Grid Connection TOUCHING Communities" multiplier="5"
   max="3" />

  <goal name="alt_fuel_community" title="Communities with Grid AND (Dam or Windmill)"
   multiplier="5" max="3" />
  <restriction lowerBound="0" upperBound="3"
   message="You cannot have more communities with alternate fuel than communities connected to the grid.">
   <term goal="grid_connection" scoreType="raw" />
   <term coefficient="-1" goal="alt_fuel_community" scoreType="raw" />
  </restriction>

  <goal name="solar_power_satellite" title="Solar Power Satellite"
   multiplier="15" />

  <goal name="solar_power_satellite_bonus" title="First to Satellite"
   multiplier="5" />
  <restriction lowerBound="0" upperBound="1"
   message="You cannot have the satellite bonus without having the satellite score">
   <term coefficient="1" goal="solar_power_satellite" scoreType="raw" />
   <term coefficient="-1" goal="solar_power_satellite_bonus" scoreType="raw" />
  </restriction>   
    

  <goal name="wave_turbine" title="Wave Turbine TO Ocean" multiplier="25" />

  <goal name="coal_mining" title="Coal Car Retrieved to Base" multiplier="10" />

  <goal name="oil_drilling" title="Oil Barrels OFF platform" multiplier="10" />

  <goal name="corn_harvest" title="Corn TO Base AND Oil TO Farm" multiplier="25" />

  <goal name="uranium_mining" title="Uranium OUT Of Farm"
   multiplier="15" />

  <goal name="tree_planting" title="Tree TO North of river Planting" multiplier="10"
   max="4" />

  <goal name="power_plant_supply_tree" title="Trees TO Power Plant (Limit 1 per planted tree &amp; No Red Fuel)"
   multiplier="10" max="2" />
  <restriction lowerBound="0" upperBound="4"
   message="There must be one tree planted for each used as fuel">
   <term coefficient="1" goal="tree_planting" scoreType="raw" />
   <term coefficient="-1" goal="power_plant_supply_tree"
    scoreType="raw" />
  </restriction>

  <restriction lowerBound="0" upperBound="4"
   message="There are only 4 trees on the field!">
   <term coefficient="1" goal="tree_planting" scoreType="raw" />
   <term coefficient="1" goal="power_plant_supply_tree" scoreType="raw" />
  </restriction>

  <goal name="power_plant_supply_coal"
   title="Black Coal TO Power Plant - at least 10 pieces &amp; No Red Fuel"
   multiplier="10" />

  <goal name="power_plant_supply_uranium"
   title="Green Uranium TO Power Plant &amp; No Red Fuel" multiplier="10" max="2" />

  <goal name="power_plant_supply_oil"
   title="White Oil Barrels TO Power Plant &amp; No Red Fuel" multiplier="5"
   max="7" />

  <goal name="oil_barrels_base"
   title="Oil Barrels IN base" multiplier="10"
   max="11" />

  <restriction lowerBound="0" upperBound="11"
   message="There are only 11 oil barrels on the field">
   <term coefficient="1" goal="power_plant_supply_oil" scoreType="raw" />
   <term coefficient="1" goal="oil_barrels_base" scoreType="raw" />
   <term coefficient="1" goal="corn_harvest" scoreType="raw" />
  </restriction>


  <goal name="pollution_deduction" title="Oil Barrels TOUCHING Water or House Property"
   multiplier="-40" />

  <!-- want to know the type of robot, but can't change the score, so set the multiplier to 0 -->
  <goal name="robot_type" title="Robot Type" initialValue="1"
   multiplier="0">
   <value score="1" title="RCX" value="rcx" />
   <value score="2" title="NXT" value="nxt" />
  </goal>

  <computedGoal name="fairness" title="Fairness Bonus">
   <variable name="subtotal">
    <term scoreType="computed" goal="roof_solar_panel" />
    <term scoreType="computed" goal="personal_vehicle_choice" />
    <term scoreType="computed" goal="hydro_dam" />
    <term scoreType="computed" goal="flood_house" />
    <term scoreType="computed" goal="wind_turbines" />
    <term scoreType="computed" goal="grid_connection" />
    <term scoreType="computed" goal="alt_fuel_community" />
    <term scoreType="computed" goal="solar_power_satellite" />
    <term scoreType="computed" goal="solar_power_satellite_bonus" />
    <term scoreType="computed" goal="wave_turbine" />
    <term scoreType="computed" goal="coal_mining" />
    <term scoreType="computed" goal="oil_drilling" />
    <term scoreType="computed" goal="corn_harvest" />
    <term scoreType="computed" goal="uranium_mining" />
    <term scoreType="computed" goal="tree_planting" />
    <term scoreType="computed" goal="power_plant_supply_tree" />
    <term scoreType="computed" goal="power_plant_supply_coal" />
    <term scoreType="computed" goal="power_plant_supply_uranium" />
    <term scoreType="computed" goal="power_plant_supply_oil" />
    <term scoreType="computed" goal="oil_barrels_base" />
    <term scoreType="computed" goal="pollution_deduction" />
   </variable>
   <switch>
    <case>
     <enumCondition>
      <left>
       <goalRef goal="robot_type" />
      </left>
      <equal-to />
      <right>
       <stringConstant value="rcx" />
      </right>
     </enumCondition>
     <switch>
      <!--
       case subtotal < 0
       bonus = (int)0 
       case subtotal < 105
       bonus = (int)(subtotal / 5) * 3
       case subtotal < 325
       bonus = 60
       case subtotal < 330
       bonus = 385 - subtotal
       case subtotal < 335
       bonus = 386 - subtotal
       case subtotal < 340
       bonus = 387 - subtotal
       case subtotal < 345
       bonus = 388 - subtotal
       case subtotal < 350
       bonus = 389 - subtotal
       case subtotal < 355
       bonus = 390 - subtotal
       case subtotal < 360
       bonus = 391 - subtotal
       case subtotal < 365
       bonus = 392 - subtotal
       case subtotal < 370
       bonus = 393 - subtotal
       case subtotal < 375
       bonus = 394 - subtotal
       case subtotal < 380
       bonus = 395 - subtotal
       case subtotal < 385
       bonus = 396 - subtotal
       case subtotal < 390
       bonus = 397 - subtotal
       case subtotal < 395
       bonus = 398 - subtotal
       case subtotal < 400
       bonus = 399 - subtotal
       default
       bonus = 0
      -->
      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than-or-equal />
        <right>
         <constant value="0" />
        </right>
       </condition>
       <result>
         <constant value="0"/>
       </result>
      </case>
      
      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="105" />
        </right>
       </condition>
       <result>
        <!-- may want to expand this all out in case the math doesn't work... -->
        <variableRef variable="subtotal" coefficient="0.6"
         floatingPoint="truncate" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="325" />
        </right>
       </condition>
       <result>
        <constant value="60" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="330" />
        </right>
       </condition>
       <result>
        <constant value="385" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
