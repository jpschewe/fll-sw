      </case>


      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="370" />
        </right>
       </condition>
       <result>
        <constant value="393" />
        <variableRef coefficient="-1" variable="subtotal" />
