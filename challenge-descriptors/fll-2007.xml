      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <less-than />
        <right>
         <constant value="400" />
        </right>
       </condition>
       <result>
        <constant value="399" />
        <variableRef coefficient="-1" variable="subtotal" />
       </result>
      </case>

      <case>
       <condition>
        <left>
         <variableRef variable="subtotal" />
        </left>
        <equal-to />
        <right>
         <constant value="400" />
        </right>
       </condition>
       <result>
        <constant value="0" />
       </result>
      </case>

      <default>
       <constant value="9999" /> <!--  error -->
      </default>

     </switch>
    </case>
    <default>
     <!-- NXT -->
     <constant value="0" />
    </default>
   </switch>
  </computedGoal>


  <tiebreaker>
   <test winner='high'>
