<?xml version="1.0"?>
<fll
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  title="variableRef in tiebreaker - should fail"
  xsi:noNamespaceSchemaLocation="http://fll-sw.sourceforge.net/fll.xsd"
  schemaVersion="1">

  <Performance
    minimumScore="0"
    weight="1.0">
    <!-- comment here at the top -->
    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="40"
      name="pump_station"
      title="Protect the Pump Station" />

    <!-- comment in the middle -->
    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="30"
      name="flags"
      title="Transect Flags: Any Flags" />

    <goal
      initialValue="0"
      max="3"
      min="0"
      multiplier="15"
      name="flags_rows"
      title="Transect Flags: Number of Rows" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="1"
      name="archaeological"
      title="Archaeological Artifacts">
      <value
        score="35"
        title="In Base"
        value="in_base" />
      <value
        score="25"
        title="Off Ship"
        value="off_ship" />
      <value
        score="0"
        title="No"
        value="no" />
    </goal>


    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="25"
      name="dolphin"
      title="Release Dolphin" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="35"
      name="sample_species"
      title="Sample Species (Grey Fish Only)" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="1"
      name="submarine"
      title="Deploy The Submarine">
      <value
        score="40"
        title="Yes Upright"
        value="upright" />
      <value
        score="35"
        title="Yes Not Upright"
        value="yes" />
      <value
        score="0"
        title="No"
        value="no" />
    </goal>


    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="40"
      name="artifical_reef"
      title="Artifical Reef" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="40"
      name="pipeline"
      title="Service The Pipeline" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="30"
      name="shipping_container"
      title="Shipping Container at Base" />

    <goal
      initialValue="0"
      max="8"
      min="0"
      multiplier="5"
      name="crates_base"
      title="Crates in Base" />

    <goal
      initialValue="0"
      max="8"
      min="0"
      multiplier="2"
      name="crates"
      title="Crates Elsewhere on Table" />

    <goal
      name="robot_type"
      title="Robot Type"
      multiplier="0"
      initialValue="1">
      <value
        score="1"
        title="RCX"
        value="rcx" />
      <value
        score="2"
        title="NXT"
        value="nxt" />
    </goal>


    <computedGoal
      name="computed"
      title="Test computed goal">
      <variable name="subtotal">
        <term>
          <goalRef
            goal="computed"
            scoreType="computed" />
        </term> <!-- cannot reference a computed goal -->
      </variable>
      <switch>
        <case>
          <enumCondition>
            <left>
              <enumGoalRef goal="robot_type" />
            </left>
            <equal-to />
            <right>
              <stringConstant value="rcx" />
            </right>
          </enumCondition>
          <switch>
            <case>
              <condition>
                <left>
                  <term>
                    <variableRef variable="subtotal" />
                  </term>
                </left>
                <less-than /> <!-- any inequality -->
                <right>
                  <term>
                    <constant value="300" />
                  </term>
                </right>
              </condition>
              <result>
                <term>
                  <goalRef
                    goal="pump_station"
                    scoreType="computed" />
                </term>
                <term>
                  <goalRef
                    goal="flags"
                    scoreType="computed" />
                </term>
                <term>
                  <goalRef
                    goal="flags_rows"
                    scoreType="computed" />
                </term>
                <term>
                  <constant value="60" />
                </term>
              </result>
            </case>
            <default> <!-- default case is required, the default just has a result -->
              <term>
                <constant value="240" />
              </term>
              <term>
                <constant value="0.4" />
                <goalRef
                  goal="pump_station"
                  scoreType="computed" />
              </term>
              <term>
                <constant value="0.4" />
                <goalRef
                  goal="flags"
                  scoreType="computed" />
              </term>
              <term>
                <constant value="0.4" />
                <goalRef
                  goal="flags_rows"
                  scoreType="computed" />
              </term>
            </default>
          </switch>
        </case>
        <default>
          <term>
            <constant value="0" />
          </term>
        </default>
      </switch>
    </computedGoal>

    <restriction
      lowerBound="0"
      message="There are a maximum of 8 crates on the table"
      upperBound="8">
      <term>
        <constant value="1" />
        <goalRef
          goal="crates_base"
          scoreType="raw" />
      </term>
      <term>
        <constant value="1" />
        <goalRef
          goal="crates"
          scoreType="raw" />
      </term>
      <term>
        <variableRef variable="" />
      </term> <!-- not allowed here -->
      <term>
        <constant value="1" />
      </term>
    </restriction>

    <tiebreaker>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="crates_base"
            scoreType="computed" />
        </term>
      </test>
    </tiebreaker>

  </Performance>


</fll>
