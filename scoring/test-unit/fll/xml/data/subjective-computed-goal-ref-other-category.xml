              </term>
            </left>
            <less-than />
            <right>
              <term>
                <constant value="30" />
              </term>
            </right>
          </condition>
          <result>
            <term>
              <constant value="100" />
            </term>
          </result>
        </case>
        <default>
          <term>
            <constant value="10" />
          </term>
        </default>
      </switch>
