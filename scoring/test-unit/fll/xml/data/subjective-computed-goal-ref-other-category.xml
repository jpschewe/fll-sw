      min="0"
      multiplier="1"
      name="archaeological"
      title="Archaeological Artifacts">
      <value
        score="35"
        title="In Base"
        value="in_base" />
      <value
        score="25"
        title="Off Ship"
        value="off_ship" />
      <value
        score="0"
