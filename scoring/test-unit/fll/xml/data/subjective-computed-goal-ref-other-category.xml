      multiplier="1"
      name="submarine"
      title="Deploy The Submarine">
      <value
        score="40"
        title="Yes Upright"
        value="upright" />
      <value
        score="35"
        title="Yes Not Upright"
        value="yes" />
      <value
        score="0"
        title="No"
        value="no" />
    </goal>


    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="40"
      name="artifical_reef"
      title="Artifical Reef" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="40"
      name="pipeline"
      title="Service The Pipeline" />

    <goal
      initialValue="0"
      max="1"
      min="0"
      multiplier="30"
      name="shipping_container"
      title="Shipping Container at Base" />

    <goal
      initialValue="0"
      max="8"
      min="0"
      multiplier="5"
      name="crates_base"
      title="Crates in Base" />

    <goal
      initialValue="0"
      max="8"
      min="0"
      multiplier="2"
      name="crates"
      title="Crates Elsewhere on Table" />

    <computedGoal
      name="computed"
      title="Test computed goal">
      <switch>
        <case>
          <enumCondition>
            <left>
              <enumGoalRef goal="robot_type" />
            </left>
            <equal-to />
            <right>
              <stringConstant value="rcx" />
            </right>
          </enumCondition>
          <switch>
            <case>
              <condition>
                <left>
                  <term>
                    <goalRef
                      goal="pump_station"
                      scoreType="computed" />
                  </term>
                  <term>
                    <goalRef
                      goal="flags"
                      scoreType="computed" />
                  </term>
                  <term>
                    <goalRef
                      goal="flags_rows"
                      scoreType="raw" />
                  </term>
                </left>
                <less-than /> <!-- any inequality -->
                <right>
                  <term>
                    <constant value="300" />
                  </term>
                </right>
              </condition>
              <result>
                <term>
                  <goalRef
                    goal="pump_station"
                    scoreType="computed" />
                </term>
                <term>
                  <goalRef
                    goal="flags"
                    scoreType="computed" />
                </term>
                <term>
                  <goalRef
                    goal="flags_rows"
                    scoreType="computed" />
                </term>
                <term>
                  <constant value="60" />
                </term>
              </result>
            </case>
            <default> <!-- default case is required, the default just has a result -->
              <term>
                <constant value="240" />
              </term>
              <term>
                <constant value="0.4" />
                <goalRef
                  goal="pump_station"
                  scoreType="computed" />
              </term>
              <term>
                <constant value="0.4" />
                <goalRef
                  goal="flags"
                  scoreType="computed" />
              </term>
              <term>
                <constant value="0.4" />
                <goalRef
                  goal="flags_rows"
                  scoreType="computed" />
              </term>
            </default>
          </switch>
        </case>
        <default>
          <term>
            <constant value="0" />
          </term>
        </default>
      </switch>
    </computedGoal>

    <restriction
      lowerBound="0"
      message="There are a maximum of 8 crates on the table"
      upperBound="8">
      <term>
        <constant value="1" />
        <goalRef
          goal="crates_base"
          scoreType="raw" />
      </term>
      <term>
        <constant value="1" />
        <goalRef
          goal="crates"
          scoreType="raw" />
      </term>
    </restriction>

    <tiebreaker>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="crates_base"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="crates"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="dolphin"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="flags_rows"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="flags"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="submarine"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="archaeological"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="shipping_container"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="pump_station"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="pipeline"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="sample_species"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="artifical_reef"
            scoreType="computed" />
        </term>
      </test>
    </tiebreaker>

  </Performance>

