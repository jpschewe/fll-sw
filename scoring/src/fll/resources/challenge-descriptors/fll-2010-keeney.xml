							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than-or-equal />
								<right>
									<constant value="0" />
								</right>
							</condition>
							<result>
								<constant value="0" />
							</result>
						</case>

						<case>
							<condition>
