								</right>
							</condition>
							<result>
								<constant value="396" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="390" />
								</right>
							</condition>
							<result>
								<constant value="397" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="395" />
								</right>
							</condition>
							<result>
								<constant value="398" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="400" />
								</right>
							</condition>
							<result>
								<constant value="399" />
								<variableRef coefficient="-1" variable="subtotal" />
