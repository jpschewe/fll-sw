					</switch>
				</case>
				<default>
					<!-- NXT -->
					<constant value="0" />
				</default>
			</switch>
		</computedGoal>


		<tiebreaker>
			<test winner='HIGH'>
				<term goal='solar_power_satellite_bonus' scoreType='computed' />
			</test>
			<test winner='HIGH'>
				<term goal='solar_power_satellite' scoreType='computed' />
			</test>
			<test winner='LOW'>
				<term goal='pollution_deduction' scoreType='computed' />
			</test>
			<test winner='HIGH'>
				<term goal='roof_solar_panel' scoreType='computed' />
			</test>
			<test winner='HIGH'>
