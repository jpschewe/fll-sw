									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="105" />
								</right>
							</condition>
							<result>
								<!--
									may want to expand this all out in case the math doesn't
									work...
								-->
								<variableRef variable="subtotal" coefficient="0.6"
									floatingPoint="truncate" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="325" />
								</right>
							</condition>
							<result>
								<constant value="60" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="330" />
								</right>
							</condition>
							<result>
								<constant value="385" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="335" />
								</right>
							</condition>
							<result>
								<constant value="386" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="340" />
								</right>
							</condition>
							<result>
								<constant value="387" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="345" />
								</right>
							</condition>
							<result>
								<constant value="388" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="350" />
								</right>
							</condition>
							<result>
								<constant value="389" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="355" />
								</right>
							</condition>
							<result>
								<constant value="390" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="360" />
								</right>
							</condition>
							<result>
								<constant value="391" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="365" />
								</right>
							</condition>
							<result>
								<constant value="392" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>


						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="370" />
								</right>
							</condition>
							<result>
								<constant value="393" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="375" />
								</right>
							</condition>
							<result>
								<constant value="394" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
							<condition>
								<left>
									<variableRef variable="subtotal" />
								</left>
								<less-than />
								<right>
									<constant value="380" />
								</right>
							</condition>
							<result>
								<constant value="395" />
								<variableRef coefficient="-1" variable="subtotal" />
							</result>
						</case>

						<case>
