<?xml version="1.0"?>
<fll
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  title="HSR 2006 Challenge: Nano Quest"
  xsi:noNamespaceSchemaLocation="http://fll-sw.sourceforge.net/fll.xsd"
  schemaVersion="1">

  <Performance
    minimumScore="0"
    weight="1.0">

    <goal
      name="pizza_off_pant_leg"
      title="Pizza Molecule Off Pant Leg"
      min="0"
      max="2"
      multiplier="10" />
    <goal
      name="pizza_in_dirt_trap"
      title="Pizza Molecule In Dirt Trap"
      min="0"
      max="2"
      multiplier="50" />
    <restriction
      lowerBound="0"
      upperBound="2"
      message="There cannot be more molecules in the dirt trap than off the pants">
      <term>
        <constant value="1" />
        <goalRef
          goal="pizza_off_pant_leg"
          scoreType="raw" />
      </term>
      <term>
        <constant value="-1" />
        <goalRef
          goal="pizza_in_dirt_trap"
          scoreType="raw" />
      </term>
    </restriction>

    <goal
      name="smart_medicine"
      title="Deliver Buckyball"
      multiplier="50" />

    <goal
      name="smart_medicine_retrieve"
      title="Retrieve Buckyball"
      multiplier="40" />

    <restriction
      lowerBound="0"
      upperBound="1"
      message="One must first retrieve buckyballs before they can be delivered">
      <term>
        <constant value="-1" />
        <goalRef
          goal="smart_medicine"
          scoreType="raw" />
      </term>
      <term>
        <constant value="1" />
        <goalRef
          goal="smart_medicine_retrieve"
          scoreType="raw" />
      </term>
    </restriction>

    <goal
      name="atomic_force"
      title="Free the Probe's Nanotip"
      multiplier="40" />

    <goal
      name="move_atoms_white"
      title="Scoring white atoms"
      min="0"
      max="8"
      multiplier="12" />

    <goal
      name="self_assembly"
      title="Self-alignment of Atoms"
      multiplier="25" />

    <goal
      name="atp_base"
      title="ATP molecules returned to base"
      multiplier="25"
      max="2" />

    <goal
      name="atp_frame"
      title="ATP molecules delivered"
      multiplier="20"
      max="2" />

    <restriction
      lowerBound="0"
      upperBound="2"
      message="One must first return the ATP molecules to the base before they can be delivered">
      <term>
        <constant value="1" />
        <goalRef
          goal="atp_base"
          scoreType="raw" />
      </term>
      <term>
        <constant value="-1" />
        <goalRef
          goal="atp_frame"
          scoreType="raw" />
      </term>
    </restriction>

    <goal
      name="dumper"
      title="Robot Emptied Dirt Dumper"
      multiplier="15" />

    <goal
      name="dirt_trap"
      title="Dirt Trap on Mark"
      multiplier="15" />

    <goal
      name="dirt_in_trap"
      title="Dirt in Dirt Trap"
      multiplier="7"
      max="8" />

    <goal
      name="dirt_elsewhere"
      title="Dirt Elsewhere"
      multiplier="3"
      max="8" />

    <restriction
      lowerBound="0"
      upperBound="8"
      message="There are a maximum of 8 dirt pieces on the table">
      <term>
        <constant value="1" />
        <goalRef
          goal="dirt_in_trap"
          scoreType="raw" />
      </term>
      <term>
        <constant value="1" />
        <goalRef
          goal="dirt_elsewhere"
          scoreType="raw" />
      </term>
    </restriction>

    <restriction
      lowerBound="0"
      upperBound="8"
      message="There are a maximum of 8 dirt pieces on the table">
      <term>
        <constant value="1" />
        <goalRef
          goal="dirt_in_base"
          scoreType="raw" />
      </term>
      <term>
        <constant value="1" />
        <goalRef
          goal="dirt_elsewhere"
          scoreType="raw" />
      </term>
    </restriction>

    <goal
      name="dirt_in_base"
      title="Dirt in Trap at Base"
      multiplier="5"
      max="8" />

    <restriction
      lowerBound="0"
      upperBound="8"
      message="If the dirt trap is at base, then the dirt in the trap counts for both Dirt in Dirt Trap and Dirt in Trap at Base">
      <term>
        <constant value="1" />
        <goalRef
          goal="dirt_in_trap"
          scoreType="raw" />
      </term>
      <term>
        <constant value="-1" />
        <goalRef
          goal="dirt_in_base"
          scoreType="raw" />
      </term>
    </restriction>

    <goal
      name="space_elevator"
      title="Operate Space Elevator"
      multiplier="40" />

    <goal
      name="nanotube_strength"
      title="Nanotube Strength">
      <value
        score="40"
        title="Supported by Cable"
        value="supported_by_cable" />
      <value
        score="20"
        title="Truck on Frame"
        value="truck_on_frame" />
      <value
        score="0"
        title="None"
        value="none" />
    </goal>

    <goal
      name="robot_type"
      title="Robot Type"
      multiplier="0"
      initialValue="1">
      <value
        score="1"
        title="RCX"
        value="rcx" />
      <value
        score="2"
        title="NXT"
        value="nxt" />
    </goal>

    <tiebreaker>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="dirt_in_trap"
            scoreType="computed" />
        </term>
        <term>
          <goalRef
            goal="dirt_elsewhere"
            scoreType="computed" />
        </term>
        <term>
          <goalRef
            goal="dirt_in_base"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="pizza_in_dirt_trap"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="pizza_off_pant_leg"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="move_atoms_white"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="smart_medicine"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="atp_frame"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="smart_medicine_retrieve"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="atp_base"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="atomic_force"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="dumper"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="dirt_trap"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="self_assembly"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="nanotube_strength"
            scoreType="computed" />
        </term>
      </test>
    </tiebreaker>

  </Performance>

  <subjectiveCategory
    name="head2head"
    title="Head to Head"
    weight="5.5">
    <goal
      initialValue="0"
      max="700"
      min="0"
      multiplier="1"
      name="score"
      title="Score" />
    <goal
      initialValue="0"
      max="50"
      min="0"
      multiplier="1"
      name="bonus"
      title="Bonus" />
  </subjectiveCategory>

  <subjectiveCategory
    name="teamwork"
    title="Team Management"
    weight="1.0">
    <goal
      initialValue="0"
      max="20"
      min="0"
      multiplier="1"
      name="dynamics"
      title="Team Dynamics - Decision Making and Problem Solving" />
    <goal
      initialValue="0"
      max="20"
      min="0"
