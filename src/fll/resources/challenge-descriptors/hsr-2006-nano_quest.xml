    title="Research Presentation"
    weight="2.5">
    <goal
      initialValue="0"
      max="20"
      min="0"
      multiplier="1"
      name="definition"
      title="Problem Definition" />
    <goal
      initialValue="0"
      max="20"
      min="0"
      multiplier="1"
      name="design"
      title="Design of Solution" />
    <goal
      initialValue="0"
      max="20"
