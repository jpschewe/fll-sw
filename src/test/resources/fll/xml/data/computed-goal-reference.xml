<?xml version="1.0"?>
<fll
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  title="Computed goal references computed goal"
  xsi:noNamespaceSchemaLocation="http://fll-sw.sourceforge.net/fll.xsd"
  schemaVersion="1">

  <Performance
    minimumScore="0"
    weight="1.0">

    <goal
      initialValue="0"
      max="8"
      min="0"
      multiplier="5"
      name="crates_base"
      title="Crates in Base" />

    <goal
      initialValue="0"
      max="8"
      min="0"
      multiplier="2"
      name="crates"
      title="Crates Elsewhere on Table" />


    <computedGoal
      name="computed1"
      title="computed1">
      <switch>
        <case>
          <condition>
            <left>
              <term>
                <goalRef
                  goal="crates_base"
                  scoreType="raw" />
              </term>
            </left>
            <equal-to />
            <right>
              <term>
                <constant value="0" />
              </term>
            </right>
          </condition>
          <result>
            <term>
              <constant value="10" />
            </term>
          </result>
        </case>
        <default>
          <term>
            <constant value="40" />
          </term>
        </default>
      </switch>
    </computedGoal>


    <computedGoal
      name="computed2"
      title="computed2">
      <switch>
        <case>
          <condition>
            <left>
              <term>
                <goalRef
                  goal="crates_base"
                  scoreType="raw" />
              </term>
            </left>
            <equal-to />
            <right>
              <term>
                <constant value="10" />
              </term>
            </right>
          </condition>
          <result>
            <term>
              <constant value="10" />
            </term>
          </result>
        </case>
        <default>
          <term>
            <constant value="40" />
          </term>
          <term>
            <constant value="5" />
            <goalRef
              goal="computed1"
              scoreType="computed" />
          </term>
        </default>
      </switch>
    </computedGoal>


    <tiebreaker>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="crates_base"
            scoreType="computed" />
        </term>
      </test>
      <test winner="HIGH">
        <term>
          <goalRef
            goal="crates"
            scoreType="computed" />
        </term>
      </test>
    </tiebreaker>

  </Performance>

</fll>
